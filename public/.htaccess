RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove trailing slash from URLs (except for directories)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{THE_REQUEST} /([^.]+)\.html(\?[^\s]*)?(?:\s|$) [NC]
RewriteRule ^ /%1/ [R=301,L]

# Redirect .html to clean URLs
RewriteCond %{THE_REQUEST} /([^.]+)\.html(\?[^\s]*)?(?:\s|$) [NC]
RewriteRule ^ /%1/ [R=301,L]

# Canonical URL redirects for main pages
RewriteRule ^index\.html$ / [R=301,L]
RewriteRule ^about\.html$ /about [R=301,L]
RewriteRule ^contact\.html$ /contact [R=301,L]
RewriteRule ^thoughts\.html$ /thoughts [R=301,L]

# Internal rewrite to serve .html files for clean URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^.]+)/?$ $1.html [L]

# Handle directory-based clean URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !/$
RewriteRule ^([^.]+)$ $1/ [R=301,L]

# Security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Permissions-Policy "camera=(), microphone=(), geolocation=()"

# Cache control
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType application/xml "access plus 1 hour"
    ExpiresByType text/xml "access plus 1 hour"
</IfModule>

# Spam URL blocking - return 410 Gone for old spam patterns
RewriteRule ^.*plantronics.*$ - [R=410,L]
RewriteRule ^.*diamond.*ring.*$ - [R=410,L]
RewriteRule ^.*nydj.*$ - [R=410,L]
RewriteRule ^.*dragon.*ball.*$ - [R=410,L]
RewriteRule ^.*lagerfeld.*$ - [R=410,L]
RewriteRule ^.*watch.*$ - [R=410,L]
RewriteRule ^.*product.*description.*$ - [R=410,L]
RewriteRule ^.*sleepies.*$ - [R=410,L]
RewriteRule ^.*dior.*$ - [R=410,L]
RewriteRule ^.*malice.*$ - [R=410,L]
RewriteRule ^.*roege.*$ - [R=410,L]
RewriteRule ^.*vines.*candle.*$ - [R=410,L]
RewriteRule ^.*cardigan.*$ - [R=410,L]
RewriteRule ^.*purse.*wallet.*$ - [R=410,L]
RewriteRule ^.*zara.*$ - [R=410,L]
RewriteRule ^.*baggy.*$ - [R=410,L]

# Block WordPress and old structure
RewriteRule ^wp-.*$ - [R=410,L]
RewriteRule ^.*\.php$ - [R=410,L] 